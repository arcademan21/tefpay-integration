{
  "name": "tefpay-integration",
  "version": "1.0.0",
  "description": "Integración universal y segura de suscripciones TEFPAY para React. Centraliza y controla todas las acciones de suscripción desde un solo punto.",
  "author": "Haroldy Arturo Pérez Rodríguez <haroldyarturo@gmail.com>",
  "license": "Public",
  "repository": {
    "type": "git",
    "url": "https://github.com/arcademan21/tefpay-integration"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --sourcemap",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "jest"
  },
  "keywords": [
    "tefpay",
    "payment",
    "subscription",
    "react",
    "gateway"
  ],
  "peerDependencies": {
    "express": ">=4.0.0",
    "fastify": ">=4.0.0",
    "koa": ">=2.0.0",
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/i18next": "^13.0.0",
    "@types/jest": "^30.0.0",
    "@types/jszip": "^3.4.1",
    "@types/node": "^24.5.0",
    "@types/react": "^19.1.13",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/sha1": "^1.1.5",
    "file-saver": "^2.0.5",
    "i18next": "^25.5.2",
    "jszip": "^3.10.1",
    "sha1": "^1.1.1"
  },
  "sideEffects": false
}
